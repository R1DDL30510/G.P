# Instance-specific settings for remote setup
# Copy to config/remote.env and adjust per host.

# short tag, e.g. output of `hostname -s`
INSTANCE_ID=
# choose windows or linux
HOST_KIND=
# shown name in tools (`hostname`)
HOST_NAME=
# WireGuard IPv6 address, `ip -6 addr show wg0`
WG_HOST_V6=
# IPv4 subnet from WireGuard config
WG_SUBNET_V4=
# IPv6 subnet from WireGuard config
WG_SUBNET_V6=
# dedicated git account
GIT_USER=
# developer login used by VSCode
DEV_USER=
# comment for ssh-key, e.g. laptop name
CLIENT_TAG=
# repository name on server
REPO_NAME=GARVIS
# default branch to push
DEFAULT_BRANCH=main
# path to git.exe on Windows hosts
WIN_GIT_BIN="C:\\Program Files\\Git\\bin\\git.exe"
# bare repos live here on Windows
WIN_REPO_ROOT="C:\\Users\\git\\repos"
# bare repos live here on Linux
LINUX_REPO_ROOT=/home/git/repos
# work tree for developer on Windows
WORK_TREE_WIN="C:\\Users\\dev\\GARVIS"
# work tree for developer on Linux
WORK_TREE_LINUX=/home/dev/GARVIS
# SSH port (check sshd_config)
SSH_PORT=22
# optional additional users
ALLOW_USERS_ADDITIONAL=
# enable post-receive checkout
POST_RECEIVE_ENABLE=false
# run tests after checkout
RUN_TESTS_ON_DEPLOY=false
