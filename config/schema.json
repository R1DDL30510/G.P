{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Application configuration",
  "type": "object",
  "required": ["database_url", "log_level"],
  "properties": {
    "database_url": {
      "type": "string",
      "pattern": "^(\\w+://.*|\\$\\{[A-Z0-9_]+\\})$"
    },
    "log_level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
    }
  },
  "additionalProperties": false
}
